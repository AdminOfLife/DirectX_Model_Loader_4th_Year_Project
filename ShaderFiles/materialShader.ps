struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 colorDif : COLOR0;
	float4 colorAm : COLOR1;
	float4 colorSp : COLOR2;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 MaterialPixelShader(PixelInputType input) : SV_TARGET
{
	float4 color;
	

	color=input.colorAm;
	//color=saturate(color);

	color+=input.colorDif;

	//color=saturate(color);
	
	

    return color;
}
